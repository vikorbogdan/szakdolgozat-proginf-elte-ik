generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  image     String?
  lessons   Lesson[] @relation("UserToLesson")
  blocks    Block[]  @relation("UserToBlock")
  groups    Group[]  @relation("UserToGroup")
}

model Group {
  id      String   @id @default(cuid())
  name    String
  subject String
  icon    String
  lessons Lesson[] @relation("GroupToLesson")
  blocks  Block[]  @relation("GroupToBlock")
  users   User[]   @relation("UserToGroup")
}

model Lesson {
  id      String  @id @default(cuid())
  title   String
  content String
  files   File[]
  blocks  Block[] @relation("LessonToBlock")
  users   User[]  @relation("UserToLesson")
  groups  Group[] @relation("GroupToLesson")
}

model Block {
  id       String   @id @default(cuid())
  title    String
  content  String?
  duration Int
  lessons  Lesson[] @relation("LessonToBlock")
  users    User[]   @relation("UserToBlock")
  groups   Group[]  @relation("GroupToBlock")
}

model File {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  path      String
  lessonId  String?
  lesson    Lesson?  @relation(fields: [lessonId], references: [id])
}

enum Role {
  USER
  ADMIN
}
